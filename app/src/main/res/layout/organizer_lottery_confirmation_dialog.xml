<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:minHeight="400dp"
    android:minWidth="600dp"
    android:padding="24dp">

    <TextView
        android:id="@+id/lotteryMessageTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Do you want to run the lottery?"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginBottom="24dp"
        android:textColor="@color/textPrimary"
        />

    <ProgressBar
        android:id="@+id/lotteryLoadingProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:layout_marginBottom="24dp" />

    <NumberPicker
        android:id="@+id/lotteryNumberPicker"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:background="@color/backgroundBox"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:spacing="8dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/lotteryConfirmButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Confirm"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_color"
            android:textColor="@color/button_text_color"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/lotteryCancelButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:layout_marginStart="8dp"
            android:background="@drawable/button_color"
            android:textColor="@color/button_text_color"/>

    </LinearLayout>

</LinearLayout>