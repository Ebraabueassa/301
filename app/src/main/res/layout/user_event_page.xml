<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/backgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:text="Event History"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/headerPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="12dp"/>

    <!-- Joined Events Section -->
    <TextView
        android:id="@+id/joined_label"
        android:text="Joined Events"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/headerPrimary"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/joinedEventsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="4dp"
        android:scrollbars="vertical"/>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginVertical="12dp"/>

    <!-- Not Selected Events Section -->
    <TextView
        android:id="@+id/not_selected_label"
        android:text="Not Selected / Waiting / Cancelled Events"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/headerPrimary"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/notSelectedEventsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="4dp"
        android:scrollbars="vertical"/>

    <!-- Back Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/back"
        android:text="Back"
        android:textAllCaps="false"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_color"
        android:textColor="@color/button_text_color"/>

</LinearLayout>
